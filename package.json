{
  "name": "fetchor",
  "version": "0.1.0",
  "description": "A lightweight TypeScript library that simplifies API calls in frontend apps.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "fetch",
    "http",
    "client",
    "typescript",
    "rest",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kysondev/fetchor.git"
  },
  "author": "kysondev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kysondev/fetchor/issues"
  },
  "homepage": "https://github.com/kysondev/fetchor#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
